<!DOCTYPE html>
<html lang="en">
  <%- include("../header"); %>

  <body>
    <%- include("../menu"); %>

    <form id="createForm">
      <!-- Material input -->
      <div class="md-form">
        <input type="text" id="name" class="form-control" required />
        <label for="title">Input NAME</label>
      </div>

      <div class="md-form">
        <input type="text" id="manufacturer" class="form-control" required />
        <label for="title">Input MANUFACTURER (Intel, AMD)</label>
      </div>

      <div class="md-form">
        <input type="text" id="core" class="form-control" required />
        <label for="title">Input CORE (Only Number)</label>
      </div>

      <div class="md-form">
        <input type="text" id="thread" class="form-control" required />
        <label for="title">Input THREAD (Only Number)</label>
      </div>

      <div class="md-form">
        <input type="text" id="releaseDate" class="form-control" required />
        <label for="title">Input RELEASE DATE (ex:Q4 2018)</label>
      </div>

      <div class="md-form">
        <input type="text" id="clock" class="form-control" required />
        <label for="title">Input CLOCK (Only Number)</label>
      </div>

      <button type="submit" class="btn btn-primary">
        저장
      </button>
    </form>

    <%- include("../footer"); %>

    <script>
      $(function () {
        $("#createForm").submit((event) => {
          event.preventDefault();
          const name = $("#name").val();
          const manufacturer = $("#manufacturer").val();
          const core = $("#core").val();
          const thread = $("#thread").val();
          const releaseDate = $("#releaseDate").val();
          const clock = $("#clock").val();

          $.ajax({
            url: "/api/cpu",
            type: "POST",
            data: { name, manufacturer, core, thread, releaseDate, clock },
          })
            .done(() => {
              location.href = "/api/cpu";
            })
            .fail((request, status, error) => {
              alert(request.responseText);
            });
        });
      });
    </script>
  </body>
</html>
